<% content_for(:title) { "Github Open Source Dashboard" } %>
<div class="gridster highcontrast">
  <h1 class="header">SilverStripe Contributions Dashboard</h1>
  <ul>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="4" 
      title="Aggregated weighted contributions: Commits, issues opened/closed, pull requests, comments. Commit counts are taken from default branch only.">
      <div 
        data-id="leaderboard" 
        data-view="Table" 
        data-unordered="true" 
        data-title="Leaderboard last 30 days">
      </div>
    </li>
    <li data-row="1" data-col="3" data-sizex="2" data-sizey="2">
      <div 
        data-id="pull_requests" 
        data-view="SeriesGraph" 
        data-renderer="bar"
        data-colors="#fff" 
        data-title="Pulls opened this month" 
        class="widget-graph">
      </div>
    </li>
    <li data-row="3" data-col="3" data-sizex="2" data-sizey="2">
      <div 
        data-id="issues_stacked" 
        data-view="SeriesGraph" 
        data-renderer="bar"
        data-colors="#ae442e #76ab13" 
        data-title="Issues opened this month" 
        class="widget-graph">
      </div>
    </li>
    <li data-row="1" data-col="5" data-sizex="2" data-sizey="4">
      <div 
        data-id="travis" 
        data-view="NestedList"
        data-title="Travis Build Status">
      </div>
    </li>
  </ul>
  <footer data-id="meta_stats" data-view="Meta"></footer>
</div>
